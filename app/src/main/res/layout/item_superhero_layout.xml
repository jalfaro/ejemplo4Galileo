<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:id="@+id/item_imagen"
        android:src="@drawable/ic_captain"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text ="Capitan America"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#AAAAAA"
            android:id="@+id/item_nombre"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000056"
            android:text ="bla bla bal bal bla bla bla bal bal bla bla bla bal bal bla bla bla bal bal bla bla bla bal bal bla bla bla bal bal bla"
            android:id="@+id/item_descripcion"/>
    </LinearLayout>

</LinearLayout>